---
/**
 * Safe & Sound — Hoja 3: Cierre / Gracias
 * Fondo degradado suave, texto de agradecimiento y datos de contacto.
 */
---


<section
  class="relative w-[1120px] h-[793px] mx-auto rounded-3xl overflow-hidden font-[Figtree] shadow-2xl bg-gradient-to-br from-[#EEF5E8] to-[#E6EDF0] flex flex-col justify-center px-20"
>
  <!-- Logo + mensaje -->
  <div class="flex items-center gap-6">
    <img
      src="/logos/sslogo.png"
      alt="Safe & Sound"
      class="w-[110px] h-auto object-contain"
      loading="lazy"
    />
    <div>
      <h1 class="text-[72px] font-bold text-[#004C3F] leading-none mb-2">
        Gracias
      </h1>
      <p class="text-lg italic text-[#004C3F]/70">
        Protegiendo lo que más valoras, impulsando lo que más importa.
      </p>
    </div>
  </div>

  <!-- Íconos -->
  <div class="mt-12 flex gap-2 bg-white/60 rounded-xl shadow-md overflow-hidden w-fit">
    <div class="p-4 bg-[#004C3F]/90 text-white flex items-center justify-center">
      <i class="fa-solid fa-envelope text-lg"></i>
    </div>
    <div class="p-4 bg-gradient-to-r from-[#A5F2DC] to-[#DCF8ED] text-[#004C3F] flex items-center justify-center">
      <i class="fa-solid fa-location-dot text-lg"></i>
    </div>
    <div class="p-4 bg-[#004C3F]/90 text-white flex items-center justify-center">
      <i class="fa-solid fa-phone text-lg"></i>
    </div>
  </div>

  <!-- Contacto -->
  <div class="absolute bottom-10 right-16 text-right">
    <h3 class="text-sm font-semibold text-[#004C3F]/80 mb-1">Contacto</h3>
    <p class="text-sm text-[#004C3F]/70 leading-relaxed">
      81 1277 9928<br />
      contacto@safesandsound.com.mx
    </p>
  </div>
</section>
